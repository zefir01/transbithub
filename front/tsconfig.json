{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "module": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/Protos/@types",
      "./src/@types"
    ]
  },
  "include": [
    "src",
    "node_modules/decimal.js/decimal.global.d.ts"
  ]
}
